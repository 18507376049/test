<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="authority.crud">
    <select id="" resultMap="authoritymap">
        select * from userinfo ui
	      inner join sys_user_role su
		    on ui.user_no=su.user_no
	      inner join sys_role sr
		    on sr.role_no = su.role_no
	      inner join sys_role_authority sra
		    on sr.role_no=sra.role_no
	      inner join sys_authority sa
		    on sa.auth_no=sra.role_auth_no
	      where ui.user_no=#{}
	</select>
